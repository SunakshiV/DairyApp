<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">


            <RadioButton
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="-20dp"
                android:textSize="@dimen/_10sdp"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:scaleX="0.7"
                android:buttonTint="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/montserrat_bold"
                android:scaleY="0.7"
                android:text="Fat Wise Rate"/>


            <RadioButton
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="-20dp"
                android:textSize="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:buttonTint="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/montserrat_bold"
                android:text="Fat Snf wise rate"/>

            <RadioButton
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="-20dp"
                android:textSize="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:buttonTint="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/montserrat_bold"
                android:text="Fat Lactose wise rate"/>
        </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:background="#BBEFFF"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/black"
        android:gravity=""
        android:paddingTop="@dimen/_5sdp"
        android:text="@string/stoke_update"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#EEFAFF"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:weightSum="6"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9sdp"
                            android:text="@string/date"/>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/custom_edt_bg">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:singleLine="true"
                                android:paddingEnd="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/montserrat_regular"
                                android:textSize="@dimen/_10sdp"
                                android:inputType="textEmailAddress"
                                android:background="@null"/>
                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9sdp"
                            android:text="Cattle"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/custom_edt_bg">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:singleLine="true"
                                android:paddingEnd="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/montserrat_regular"
                                android:textSize="@dimen/_10sdp"
                                android:inputType="textEmailAddress"
                                android:background="@null"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9sdp"
                            android:text="Min FAT"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/custom_edt_bg">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:singleLine="true"
                                android:paddingEnd="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/montserrat_regular"
                                android:textSize="@dimen/_10sdp"
                                android:inputType="textEmailAddress"
                                android:background="@null"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:weightSum="6"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9sdp"
                            android:text="Max FAT"/>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/custom_edt_bg">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:singleLine="true"
                                android:paddingEnd="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/montserrat_regular"
                                android:textSize="@dimen/_10sdp"
                                android:inputType="textEmailAddress"
                                android:background="@null"/>
                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9sdp"
                            android:text="Min SNF"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/custom_edt_bg">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:singleLine="true"
                                android:paddingEnd="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/montserrat_regular"
                                android:textSize="@dimen/_10sdp"
                                android:inputType="textEmailAddress"
                                android:background="@null"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9sdp"
                            android:text="Max SNF"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/custom_edt_bg">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:singleLine="true"
                                android:paddingEnd="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/montserrat_regular"
                                android:textSize="@dimen/_10sdp"
                                android:inputType="textEmailAddress"
                                android:background="@null"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:weightSum="6"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9sdp"
                            android:text="KG/FAT"/>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/custom_edt_bg">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:singleLine="true"
                                android:paddingEnd="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/montserrat_regular"
                                android:textSize="@dimen/_10sdp"
                                android:inputType="textEmailAddress"
                                android:background="@null"/>
                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9sdp"
                            android:text="KG/SNF"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/custom_edt_bg">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:singleLine="true"
                                android:paddingEnd="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/montserrat_regular"
                                android:textSize="@dimen/_10sdp"
                                android:inputType="textEmailAddress"
                                android:background="@null"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9sdp"
                            android:text="Rate/FAT"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/custom_edt_bg">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:singleLine="true"
                                android:paddingEnd="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/montserrat_regular"
                                android:textSize="@dimen/_10sdp"
                                android:inputType="textEmailAddress"
                                android:background="@null"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">


                    <Button
                        android:layout_marginStart="@dimen/_20sdp"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:background="#015DAF"
                        android:text="SAVE"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:weightSum="3"

                    android:layout_marginTop="@dimen/_20sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="1.5">
                        <LinearLayout
                            android:background="@drawable/cstm_round_bg"
                            android:layout_width="@dimen/_100sdp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_height="@dimen/_20sdp">


                            <TextView
                                android:fontFamily="@font/montserrat_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/switch_to_chart"
                                android:gravity="center"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/colorPrimary"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="end|center"
                        android:layout_weight="1.5">

                        <LinearLayout
                            android:background="@drawable/cstm_round_bg"
                            android:layout_width="@dimen/_50sdp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_height="@dimen/_20sdp">
                            <ImageView
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/csv_icon"/>

                            <TextView
                                android:fontFamily="@font/montserrat_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="CSV"
                                android:gravity="center"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:background="@drawable/cstm_round_bg"
                            android:layout_width="@dimen/_50sdp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_height="@dimen/_20sdp">
                            <ImageView
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/iconfinder_pdf"/>

                            <TextView
                                android:fontFamily="@font/montserrat_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Pdf"
                                android:gravity="center"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:weightSum="7.5"
                    android:background="#000352"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5">

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:fontFamily="@font/montserrat_semibold"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/date"
                            android:gravity="center"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">
                        <TextView
                            android:fontFamily="@font/montserrat_semibold"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/code"
                            android:gravity="center"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">
                        <TextView
                            android:fontFamily="@font/montserrat_semibold"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">
                        <TextView
                            android:fontFamily="@font/montserrat_semibold"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/name"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/white"/>
                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_account"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </androidx.recyclerview.widget.RecyclerView>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
</LinearLayout>
    </ScrollView>

</layout>
