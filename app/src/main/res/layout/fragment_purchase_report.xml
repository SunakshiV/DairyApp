<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.AllAccountActivity">

        <LinearLayout
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
   android:gravity="start"
    android:orientation="horizontal">


    <RadioButton
        android:textSize="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.7"

        android:buttonTint="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/montserrat_bold"
        android:scaleY="0.7"
        android:text="Item Purchase"/>


    <RadioButton
        android:textSize="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:buttonTint="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/montserrat_bold"
        android:text="Milk Purchase"/>
</LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:weightSum="3"
                android:layout_marginTop="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Export to :"
                        android:gravity="center"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="end|center"
                    android:layout_weight="2">

                    <LinearLayout
                        android:background="@drawable/cstm_round_bg"
                        android:layout_width="@dimen/_50sdp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_height="@dimen/_20sdp">
                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/csv_icon"/>

                        <TextView
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="CSV"
                            android:gravity="center"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/cstm_round_bg"
                        android:layout_width="@dimen/_50sdp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_height="@dimen/_20sdp">
                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/iconfinder_pdf"/>

                        <TextView
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Pdf"
                            android:gravity="center"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:weightSum="6"
                android:background="#000352"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:fontFamily="@font/montserrat_semibold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/date"
                        android:gravity="center"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:fontFamily="@font/montserrat_semibold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/time"
                        android:gravity="center"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:fontFamily="@font/montserrat_semibold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/firm_name"
                        android:gravity="center"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_5sdp"

                    android:layout_weight="1">
                    <TextView
                        android:fontFamily="@font/montserrat_semibold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/item_type"
                        android:gravity="center"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5">
                    <TextView
                        android:fontFamily="@font/montserrat_semibold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/units"
                        android:gravity="center"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="@color/white"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>





        </LinearLayout>
    </LinearLayout>
</layout>